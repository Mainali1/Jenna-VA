# Jenna Voice Assistant Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE SETTINGS
# =============================================================================
APP_NAME=Jenna
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO
DATA_DIR=./data
CONFIG_DIR=./config

# =============================================================================
# VOICE RECOGNITION SETTINGS
# =============================================================================
WAKE_PHRASE=Jenna Ready
VOICE_RECOGNITION_ENGINE=hybrid
OFFLINE_MODEL_PATH=./models/vosk
SPEECH_TIMEOUT=5
PHRASE_TIMEOUT=1
ENERGY_THRESHOLD=300
DYNAMIC_ENERGY_THRESHOLD=true

# =============================================================================
# TEXT-TO-SPEECH SETTINGS
# =============================================================================
TTS_ENGINE=pyttsx3
VOICE_GENDER=female
SPEECH_RATE=200
VOLUME=0.8
VOICE_ID=

# =============================================================================
# API KEYS (Leave empty to disable features)
# =============================================================================

# Google Cloud Speech API
GOOGLE_CLOUD_CREDENTIALS_PATH=
GOOGLE_APPLICATION_CREDENTIALS=

# Weather Service
WEATHER_API_KEY=
WEATHER_SERVICE_URL=https://api.weatherapi.com/v1

# OpenAI API (for enhanced AI responses)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=150

# Wikipedia API
WIKIPEDIA_LANGUAGE=en
WIKIPEDIA_SENTENCES=3

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_ENABLED=false
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
IMAP_SERVER=
IMAP_PORT=993
EMAIL_ADDRESS=

# =============================================================================
# DATABASE SETTINGS
# =============================================================================
DATABASE_URL=sqlite:///./data/jenna.db
DATABASE_ECHO=false

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
SECRET_KEY=your-secret-key-here-change-this
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
ENCRYPTION_KEY=

# =============================================================================
# FEATURE TOGGLES
# =============================================================================
FEATURE_POMODORO=true
FEATURE_FLASHCARDS=true
FEATURE_WEATHER=true
FEATURE_EMAIL=false
FEATURE_FILE_OPERATIONS=true
FEATURE_APP_LAUNCHER=true
FEATURE_MUSIC_CONTROL=true
FEATURE_NOTES=true
FEATURE_REMINDERS=true
FEATURE_SCREEN_ANALYSIS=true
FEATURE_MOOD_DETECTION=true
FEATURE_BACKUP=true

# =============================================================================
# UI SETTINGS
# =============================================================================
UI_THEME=dark
UI_ACCENT_COLOR=#00ff88
UI_ANIMATION_SPEED=normal
UI_SHOW_VISUALIZER=true
UI_MINIMIZE_TO_TRAY=true
UI_START_MINIMIZED=false

# =============================================================================
# SYSTEM INTEGRATION
# =============================================================================
START_WITH_WINDOWS=true
SYSTEM_TRAY_ENABLED=true
HOTKEY_TOGGLE=ctrl+shift+j
AUTO_UPDATE_CHECK=true
UPDATE_CHANNEL=stable
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
AUDIO_CHUNK_SIZE=1024
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
PROCESSING_THREADS=4
CACHE_SIZE_MB=100
MAX_CONVERSATION_HISTORY=50
AUDIO_BUFFER_SIZE=1024
MAX_CONCURRENT_REQUESTS=10

# =============================================================================
# BACKUP SETTINGS
# =============================================================================
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups
BACKUP_INCLUDE_AUDIO=false

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
DEV_MODE=false
DEV_MOCK_APIS=false
DEV_VERBOSE_LOGGING=false
DEV_SKIP_AUDIO_INIT=false
ENABLE_CORS=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
API_PREFIX=/api/v1
DOCS_URL=/docs
REDOC_URL=/redoc